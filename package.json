{
  "name": "evidenra-basic",
  "version": "1.2.3",
  "description": "EVIDENRA BASIC - Qualitative Datenanalyse mit KI",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "webpack serve --mode development",
    "build": "webpack --mode development",
    "build-prod": "webpack --mode production",
    "build-mobile": "webpack --mode production --config webpack.mobile.config.js",
    "electron-dev": "set NODE_ENV=development && electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run build-prod && electron-builder",
    "dist:win": "npm run build-prod && electron-builder --win portable",
    "dist:mac": "npm run build-prod && electron-builder --mac",
    "dist:linux": "npm run build-prod && electron-builder --linux AppImage",
    "dist:all": "npm run build-prod && electron-builder --win portable --mac --linux AppImage",
    "cap:init": "npx cap init",
    "cap:add:ios": "npx cap add ios",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "mobile:ios": "npm run build-mobile && npx cap sync ios",
    "mobile:android": "npm run build-mobile && npx cap sync android",
    "mobile:build": "npm run build-mobile && npx cap sync"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@capacitor/cli": "^6.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "app-builder-bin": "^5.0.0-alpha.12",
    "babel-loader": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.4",
    "pg": "^8.16.3",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/filesystem": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/keyboard": "^6.0.0",
    "@capacitor/preferences": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "@supabase/supabase-js": "^2.86.2",
    "@tabler/icons-react": "^3.34.1",
    "@tensorflow/tfjs": "^4.22.0",
    "autoprefixer": "^10.4.21",
    "css-loader": "^7.1.2",
    "density-clustering": "^1.3.0",
    "jspdf": "^2.5.2",
    "ml-matrix": "^6.12.1",
    "ml-pca": "^4.1.1",
    "pdfjs-dist": "^5.4.149",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17"
  },
  "build": {
    "appId": "com.evidenra.basic",
    "productName": "EVIDENRA BASIC",
    "directories": {
      "output": "releases/2026-01-02"
    },
    "win": {
      "icon": "Logo.ico",
      "target": {
        "target": "portable",
        "arch": [
          "x64"
        ]
      },
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "EVIDENRA-Basic-${version}-Windows.exe"
    },
    "mac": {
      "icon": "Logo.png",
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "category": "public.app-category.productivity",
      "artifactName": "EVIDENRA-Basic-${version}-macOS-${arch}.dmg"
    },
    "linux": {
      "icon": "Logo.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office",
      "artifactName": "EVIDENRA-Basic-${version}-Linux.AppImage"
    },
    "publish": null,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "src/preload/**/*",
      "package.json",
      "!node_modules/@napi-rs/**/*",
      "!node_modules/@capacitor/**/*"
    ],
    "extraMetadata": {
      "main": "src/main/main.js"
    },
    "extraResources": [
      {
        "from": "Logo.ico",
        "to": "Logo.ico"
      }
    ],
    "asarUnpack": [
      "node_modules/pdfjs-dist/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "electronDownload": {
      "cache": ".electron-cache"
    }
  }
}
